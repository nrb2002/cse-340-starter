<!-- EJS code block to contain a JavaScript if structure to determine if a "title" variable exists. -->
<% if (title) { %>
  <h1><%= title || "Add New Inventory Item" %></h1>
<% } %>

<!-- Flash message (if any) -->
<% if (messages && messages.length > 0) { %>
  <div class="flash-message">
    <% messages.forEach(function(message) { %>
      <p><%= message %></p><br>
    <% }) %>
  </div>
<% } %>

<!-- Errors to display, if any -->
<% if (errors && errors.array && errors.array().length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Main content -->
<section class="form-container">
  <h2>Fill out this form to add a new inventory</h2>

  <form class="account-form" action="/inv/add-inventory" method="POST">

    <fieldset>
      <legend>Vehicle Details</legend>

      <!-- Classification dropdown (dynamically generated by util.buildClassificationList) -->
      <div class="form-group">
        <label for="classification_id">Classification *</label>
        <%- classificationList %>
      </div>


      <div class="form-group">
        <label for="inv_make">Make<span>*</span>
          <input type="text" id="inv_make" name="inv_make" minlength="2" maxlength="30"
            pattern="^[a-zA-Z0-9\s]+$"
            placeholder="e.g., Toyota"
            value="<%= locals.inv_make %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_model">Model
          <input type="text" id="inv_model" name="inv_model" minlength="1" maxlength="30"
            pattern="^[a-zA-Z0-9\s]+$"
            placeholder="e.g., Corolla"
            value="<%= locals.inv_model %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_year">Year
          <input type="number" id="inv_year" name="inv_year" min="1900" max="2099"
            placeholder="e.g., 2024"
            value="<%= locals.inv_year %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_description">Description*
          <textarea id="inv_description" name="inv_description" rows="4" minlength="10"
            placeholder="Enter a detailed vehicle description" required><%= locals.inv_description %>
          </textarea>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_image">Image Path
          <input type="text" id="inv_image" name="inv_image"
            placeholder="/images/vehicles/no-image.png"
            value="<%= locals.inv_image || '/images/vehicles/no-image.png' %>" required>
        </label>
        <small><i>Default path: /images/vehicles/no-image.png</i></small>
      </div>

      <div class="form-group">
        <label for="inv_thumbnail">Thumbnail Path
          <input type="text" id="inv_thumbnail" name="inv_thumbnail"
            placeholder="/images/vehicles/no-image-tn.png"
            value="<%= locals.inv_thumbnail || '/images/vehicles/no-image-tn.png' %>" required>
        </label>
        <small><i>Default path: /images/vehicles/no-image-tn.png</i></small>
      </div>

      <div class="form-group">
        <label for="inv_price">Price ($)
          <input type="number" id="inv_price" name="inv_price" min="1" step="0.01"
            placeholder="e.g., 25000"
            value="<%= locals.inv_price %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_miles">Mileage
          <input type="number" id="inv_miles" name="inv_miles" min="0"
            placeholder="e.g., 50000"
            value="<%= locals.inv_miles %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_color">Color
          <input type="text" id="inv_color" name="inv_color" minlength="3" maxlength="20"
            pattern="^[a-zA-Z\s]+$"
            placeholder="e.g., Red"
            value="<%= locals.inv_color %>" required>
        </label>
      </div>

    </fieldset>

    <button type="submit">Add Vehicle to Inventory</button>
  </form>

  <p class="form-footer">
    <a href="/inv">Go back to the Vehicle Management page.</a>
  </p>
</section>
