<!-- EJS code block to contain a JavaScript if structure to determine if a "title" variable exists. -->
<% if (title) { %>
  <h1><%= title || "Add New Inventory Item" %></h1>
<% } %>

<!-- Flash message (if any) -->
<% if (messages && messages.length > 0) { %>
  <div class="flash-message">
    <% messages.forEach(function(message) { %>
      <p><%= message %></p><br>
    <% }) %>
  </div>
<% } %>

<!-- Errors to display, if any -->
<% if (errors && errors.array && errors.array().length > 0) { %>
  <ul class="notice">
    <% errors.array().forEach(error => { %>
      <li><%= error.msg %></li>
    <% }) %>
  </ul>
<% } %>

<!-- Main content -->
<section class="form-container">
  <h2>Use this form to update this vehicleâ€™s information</h2>

  <form id="updateForm" class="account-form" action="/inv/update-inventory" method="POST">

    <fieldset>
      <legend>Vehicle Details</legend>

      <!-- Hidden field for inv_id -->
      <input type="hidden" name="inv_id" 
      <% if(locals.inv_id) { %> 
        value="<%= locals.inv_id %>"
      <% } %>>

      <!-- Classification dropdown (dynamically generated by util.buildClassificationList) -->
      <div class="form-group">
        <label for="classification_id">Classification *</label>
        <%- classificationList %>
      </div>

      <div class="form-group">
        <label for="inv_make">Make<span>*</span>
          <input type="text" id="inv_make" name="inv_make" minlength="2" maxlength="30" pattern="^[a-zA-Z0-9\\s]+$"
            value="<%= locals.inv_make %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_model">Model
          <input type="text" id="inv_model" name="inv_model" minlength="1" maxlength="30" pattern="^[a-zA-Z0-9\\s]+$"
            value="<%= locals.inv_model %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_year">Year
          <input type="number" id="inv_year" name="inv_year" min="1900" max="2099" value="<%= locals.inv_year %>"
            required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_description">Description*
          <textarea id="inv_description" name="inv_description" rows="4" minlength="10"
            required><%= locals.inv_description %></textarea>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_image">Image Path
          <input type="text" id="inv_image" name="inv_image" value="<%= locals.inv_image %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_thumbnail">Thumbnail Path
          <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= locals.inv_thumbnail %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_price">Price ($)
          <input type="number" id="inv_price" name="inv_price" min="1" step="0.01" value="<%= locals.inv_price %>"
            required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_miles">Mileage
          <input type="number" id="inv_miles" name="inv_miles" min="0" value="<%= locals.inv_miles %>" required>
        </label>
      </div>

      <div class="form-group">
        <label for="inv_color">Color
          <input type="text" id="inv_color" name="inv_color" minlength="3" maxlength="20" pattern="^[a-zA-Z\\s]+$"
            value="<%= locals.inv_color %>" required>
        </label>
      </div>
    </fieldset>

    <button id="updateBtn" type="submit" disabled>Update Vehicle</button>
  </form>

  <p class="form-footer">
    <a href="/inv">Return to Vehicle Management</a>
  </p>
</section>






<!-- Activate form button only if at least one field has been changed -->
<script src="../../js/inv-update.js"></script>