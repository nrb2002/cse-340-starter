<!-- Check to see if a title variable exists -->
<% if (title) { %>
    <!-- if a title variable exists, then display it as an h1 -->
    <h1 class="title"><%= title %></h1>
<% } else {
    // Otherwise, redirect the response obkect to the home view
    res.redirect('/')
} %>

<!-- Commented now. To be enabled later -->
<%- messages() %>

<!-- This is the main content to be displayed in the view -->

<div class="form-container">
    <div class="form-card">
        <h2>Please enter your username</h2>
        <hr>  
        <form class="account-form" action="/account/username" method="post">    
            <label for="account_email">Username</label>
            <input type="email" id="account_email" name="account_email" placeholder="Enter your username">
            <input class="btn" type="submit" value="Verify">
            <div class="form-link"><a href="/account/login" >Back to login page.</a></div>
        </form>  
    </div>
</div>