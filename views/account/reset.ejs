<!-- Check to see if a title variable exists -->
<% if (title) { %>
    <!-- if a title variable exists, then display it as an h1 -->
    <h1 class="title"><%= title %></h1>
<% } else {
    // Otherwise, redirect the response obkect to the home view
    res.redirect('/')
} %>

<!-- Commented now. To be enabled later -->
<%- messages() %>

<!-- This is the main content to be displayed in the view -->

<div class="form-container">
    <div class="form-card">
        <h2>Please fill out this form to register</h2><hr>
        <form class="account-form" action="/account/reset" method="post">
            <legend><small>All fields are required.</small></legend><br><br>

            <label for="account_email">Username</label>
            <input type="email" id="account_email" name="account_email" placeholder="Username must match an existing email address" value="<%= locals.account_email %>" required>
        
            <label for="account_password">New Password</label>
            <input type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{11,}$" id="account_password" name="account_password" placeholder="Enter your new password" required>
            <small>The password must contain at least 12 characters, 1 capital letter, 1 number, and 1 special character.</small>
        
            <label for="account_confirm_password">Confirm Password</label>
            <input type="password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" id="account_confirm_password" name="account_confirm_password" placeholder="Re-enter your new password" required>
            
            <div class="togglePasswd"><input type="checkbox" onclick="togglePassword()"><label>  Show Password</label></div>

            <button>Save</button>
        </form>
  
        <div class="form-link">Already have an account? <a href="/account/login" >Sign in here.</a></div>
    </div>
</div>